<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <Button
        android:id="@+id/start_float_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_suspension_window" />
    <!--android:onClick="startFloat"-->
    <Button
        android:id="@+id/stop_float_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/stop_suspension_window" />
    <!--android:onClick="stopFloat"-->
    <Button
        android:id="@+id/start_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startScreenShot"
        android:text="@string/screen_shot" />

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="screenShotStop"
        android:text="@string/screen_shot_stop" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doMath"
        android:text="保存图片" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doMath"
        android:text="计算C" />

</LinearLayout>